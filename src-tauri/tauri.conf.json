{
	"build": {
		"beforeDevCommand": "pnpm vite:dev",
		"beforeBuildCommand": "pnpm vite:build",
		"devPath": "http://localhost:1420",
		"distDir": "../dist"
	},
	"package": {
		"productName": "aspen-windows",
		"version": "0.0.0"
	},
	"tauri": {
		"allowlist": {
			"all": false,
			"shell": {
				"all": false,
				"open": true
			}
		},
		"windows": [
			{
				"title": "Aspen",
				"width": 800,
				"height": 600
			}
		],
		"security": {
			"csp": null
		},
		"bundle": {
			"active": false,
			"targets": "all",
			"identifier": "com.aspen.app",
			"icon": [
				"icons/32x32.png",
				"icons/128x128.png",
				"icons/128x128@2x.png",
				"icons/icon.icns",
				"icons/icon.ico"
			]
		}
	}
}
